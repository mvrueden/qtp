<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.marskuh.qtp</groupId>
  <artifactId>app</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <packaging>jar</packaging>
  <description>
